{
  "manifest_version": 2,

  "name": "Nona Savior",
  "description": "Replaces comments containing user-defined keywords with a placeholder.",
  "version": "3.0",

  "permissions": [
    "http://www.dreamwidth.org/"
  ],
  
  "browser_action": {
    "default_icon": "img/icon16.png",
    "default_popup": "data/options.html",
    "default_title": "Nona Savior"
  },
  
  "options_page": "data/options.html",
  
  "background": {
    "scripts": ["data/savior.js", "data/background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["http://*.dreamwidth.org/*.html*"],
      "js": ["data/getElementsByClassName-1.0.1.js", "data/savior.js", "data/driver.js"],
      "run_at": "document_end"
    }
  ],
  
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "64": "img/icon64.png",
    "128": "img/icon128.png"
  }
}
